<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >
    <RelativeLayout
        android:id="@+id/maintop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        >

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        >
        <LinearLayout
        android:id="@+id/cityweather_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/city_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兴宁"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/city"
                android:src="@mipmap/arrow_down"
                android:layout_margin="2dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_layout"
            >
            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴 25℃"
                android:textSize="13sp"
                android:textColor="#2F4F4F"
                />
        </RelativeLayout>

    </LinearLayout>

        <RelativeLayout
        android:id="@+id/search_top_layout"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/stroketext"
        android:layout_toRightOf="@id/cityweather_layout"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/garbage_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/sousuo"
            />

        <AutoCompleteTextView
            android:id="@+id/garbage_search_autoCompelete"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:padding="3dp"
            android:completionThreshold="1"
            android:layout_toRightOf="@+id/garbage_search"
            />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/search_top_layout"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            >
           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@mipmap/yuyin"
               android:padding="5dp"
               android:layout_weight="1"
               />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/jia"
                android:padding="5dp"
                android:layout_weight="1"
                />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/resou"
            style="@style/resou_text"
            android:text="热搜："
            />

        <TextView
            android:id="@+id/resouitem_1"
            android:text="都晟酒店"
            android:layout_toRightOf="@+id/resou"
            android:layout_marginLeft="10dp"
            style="@style/resou_text"
            />

        <TextView
            android:id="@+id/line1"
            style="@style/resou_line"
            android:layout_toRightOf="@+id/resouitem_1"
            />

        <TextView
            android:id="@+id/resouitem_2"
            android:text="水果"
            android:layout_toRightOf="@+id/line1"
            android:layout_marginLeft="5dp"
            style="@style/resou_text"
            />
        <TextView
            android:id="@+id/line2"
            style="@style/resou_line"
            android:layout_toRightOf="@+id/resouitem_2"
            />
        <TextView
            android:id="@+id/resouitem_3"
            android:text="奶茶外卖"
            android:layout_toRightOf="@+id/line2"
            android:layout_marginLeft="5dp"
            style="@style/resou_text"
            />
        <TextView
            android:id="@+id/line3"
            style="@style/resou_line"
            android:layout_toRightOf="@+id/resouitem_3"
            />
        <TextView
            android:id="@+id/resouitem_4"
            android:text="水果捞"
            android:layout_toRightOf="@+id/line3"
            android:layout_marginLeft="5dp"
            style="@style/resou_text"
            />
        <TextView
            android:id="@+id/line4"
            style="@style/resou_line"
            android:layout_toRightOf="@+id/resouitem_4"

            />
        <TextView
            android:id="@+id/resouitem_5"
            android:text="自助餐"
            android:layout_toRightOf="@+id/line4"
            android:layout_marginLeft="5dp"
            style="@style/resou_text"
            />
    </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maintop_layout"
        >

        <GridView
            android:id="@+id/iconGv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:numColumns="5"
            android:padding="10dp"
            />
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconGv"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
        <ImageView
            android:id="@+id/first_page_icon"
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:src="@mipmap/huidian"
            android:layout_weight="1"
        />
        <ImageView
            android:id="@+id/second_page_icon"
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:src="@mipmap/huidian"
            android:layout_weight="1"
            />
        </LinearLayout>
    </RelativeLayout>

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>