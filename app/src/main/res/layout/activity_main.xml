<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        >

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        >
        <LinearLayout
        android:id="@+id/cityweather_layout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/city_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兴宁"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/city"
                android:src="@mipmap/arrow_down"
                android:layout_margin="2dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_layout"
            >
            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴 25℃"
                android:textColor="#000000"
                />
        </RelativeLayout>

    </LinearLayout>

        <RelativeLayout
        android:id="@+id/search_top_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/stroketext"
        android:layout_toRightOf="@id/cityweather_layout"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/garbage_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/sousuo"
            />

        <AutoCompleteTextView
            android:id="@+id/garbage_search_autoCompelete"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:padding="3dp"
            android:completionThreshold="1"
            android:layout_toRightOf="@+id/garbage_search"
            />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/search_top_layout"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@mipmap/yuyin"
               android:padding="5dp"
               android:layout_weight="1"
               />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/jia"
                android:padding="5dp"
                android:layout_weight="1"
                />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="热搜："
        />
    </LinearLayout>
    </RelativeLayout>
    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>