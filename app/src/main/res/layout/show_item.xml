<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/stroke"
    app:contentPadding="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/picture"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@mipmap/pa"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/strokeitempicture"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.7km"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:padding="2dp"
                />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"

            >
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新疆大草莓"
        android:textColor="#000000"

        />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0分"
            android:textColor="#FFA500"
            android:layout_below="@id/name"
            />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好吃，太好吃了"
            android:textColor="#000000"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/score"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 30"
            android:textColor="#FFA500"
            android:layout_below="@id/score"
            />

        <TextView
            android:id="@+id/qi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起"
            android:textColor="#000000"
            android:layout_below="@id/score"
            android:layout_toRightOf="@id/price"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返优惠卷"
            android:textColor="#000000"
            android:layout_below="@id/score"
            android:layout_toRightOf="@id/qi"
            />
        <TextView
            android:id="@+id/yishou_pingjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售55555|评价222"
            android:textColor="#000000"
            android:layout_below="@id/price"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/gengduo"
            android:layout_toRightOf="@+id/yishou_pingjia"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/price"
            />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>